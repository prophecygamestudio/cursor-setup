{
  "editor.fontSize": 14,
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.rulers": [80, 120],
  
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/[Tt]emp/": true,
    "**/[Ll]ibrary/": true,
    "**/[Oo]bj/": true,
    "**/[Bb]uild/": true,
    "**/[Bb]uilds/": true,
    "**/[Ll]ogs/": true,
    "**/[Uu]ser[Ss]ettings/": true,
    "**/*.meta": false
  },
  
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/[Tt]emp/": true,
    "**/[Ll]ibrary/": true,
    "**/[Bb]uild/": true,
    "**/[Bb]uilds/": true
  },
  
  "csharp.semanticHighlighting.enabled": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableEditorConfigSupport": true,
  
  "cpp.default.cppStandard": "c++17",
  "cpp.default.cStandard": "c11",
  
  "python.defaultInterpreterPath": "python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  
  "workbench.colorTheme": "Dark+ (default dark)",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  
  "extensions.ignoreRecommendations": false,
  "telemetry.telemetryLevel": "off",
  
  "cursor.aiProvider": "anthropic",
  "cursor.aiModel": "claude-3-opus",
  "cursor.chat.showSuggestions": true,
  "cursor.chat.defaultSystemPrompt": "You are an AI assistant helping with game development. Consider performance, platform constraints, and gameplay experience in all suggestions.",
  
  "files.associations": {
    "*.compute": "hlsl",
    "*.shader": "hlsl",
    "*.cginc": "hlsl",
    "*.hlsl": "hlsl",
    "*.glsl": "glsl",
    "*.vert": "glsl",
    "*.frag": "glsl",
    "*.prefab": "yaml",
    "*.unity": "yaml",
    "*.asset": "yaml",
    "*.mat": "yaml",
    "*.meta": "yaml"
  },
  
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.formatOnSave": true
  },
  
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },
  
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false
  }
}
